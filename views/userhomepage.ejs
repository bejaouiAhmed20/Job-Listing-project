<%- include('./partials/header')%>
  <style>
    .dropdown-menu {
      right: 0;
      left: auto;
    }
    .search-bar-container {
      max-width: 600px;
      margin-top: 20px;
    }
    .job-card {
      transition: transform 0.2s ease-in-out;
    }
    .job-card:hover {
      transform: translateY(-5px);
    }
  </style>
</head>
<body>
    <%- include('./partials/user_navbar')%>


  <!-- Search Bar -->
  <div class="container search-bar-container">
    <form class="d-flex mx-auto">
      <input class="form-control me-2" type="search" placeholder="Search jobs..." aria-label="Search" id="searchInput">
      <button class="btn btn-outline-primary" type="button" >Search</button>
    </form>
  </div>

  <!-- Job Listings Section -->
  <div class="container my-5">
    <h2 class="mb-4 text-center">Available Job Listings</h2>
    <div id="jobList" class="row gy-4">
      <!-- Loop through jobs array and display each job as a card -->
      <% if (jobs && jobs.length > 0) { %>
        <% jobs.forEach(job => { %>
          <div class="col-12 col-md-6 col-lg-4">
            <div class="card job-card h-100 shadow-sm">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title job-title"><%= job.title %></h5>
                <p class="card-text"><%= job.description %></p>
                <ul class="list-unstyled mb-3">
                  <li><strong>Location:</strong> <%= job.location %></li>
                  <li><strong>Salary:</strong> <%= job.salary %></li>
                  <li><strong>Posted on:</strong> <%= new Date(job.postDate).toLocaleDateString() %></li>
                  <li><strong>Deadline:</strong> <%= new Date(job.deadline).toLocaleDateString() %></li>
                </ul>
                <a href="jobs/<%= job.id %>" class="btn btn-primary btn-sm mt-auto">See More</a>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <p class="text-center text-muted">No job listings available at the moment.</p>
      <% } %>
    </div>
  </div>


</body>
</html>
