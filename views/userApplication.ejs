<!-- views/applications.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Client Applications</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .status-pending { color: orange; font-weight: bold; }
        .status-approved { color: green; font-weight: bold; }
        .status-rejected { color: red; font-weight: bold; }
    </style>
</head>
<body>
    <%- include('./partials/user_navbar')%>
    <div class="container mt-5">
        <h1 class="text-center">My Applications</h1>
        <table class="table table-bordered mt-4">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Offer Title</th>
                    <th>Status</th>
                    <th>Apply Date</th>
                </tr>
            </thead>
            <tbody>
                <% if (applications && applications.length > 0) { %>
                    <% applications.forEach((application, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= application.offer.title %></td>
                            <td class="status-<%= application.status.toLowerCase() %>">
                                <%= application.status %>
                            </td>
                            <td><%= new Date(application.applyDate).toLocaleDateString() %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4" class="text-center">No applications found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
